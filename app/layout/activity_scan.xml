<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScanActivity">

    <TextView
        android:id="@+id/scanbook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SCAN BOOK"
        android:textSize="40sp"
        android:gravity="center"
        android:fontFamily="@font/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="#000000"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            />
    </FrameLayout>



    <EditText
        android:id="@+id/pageCountEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Enter page count"
        android:fontFamily="@font/regular"
        app:layout_constraintTop_toBottomOf="@id/scanbook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp" />

    <android.widget.Button
        android:id="@+id/startScanButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Start Scan"
        android:textSize="20sp"
        android:background="@drawable/main_item_button"
        android:fontFamily="@font/bold"
        app:layout_constraintTop_toBottomOf="@id/pageCountEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <android.widget.Button
        android:id="@+id/pauseScanButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Pause Scan"
        android:textSize="20sp"
        android:background="@drawable/main_item_button"
        android:fontFamily="@font/bold"
        app:layout_constraintTop_toBottomOf="@id/startScanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <android.widget.Button
        android:id="@+id/endScanButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="End Scan"
        android:textSize="20sp"
        android:background="@drawable/main_item_button"
        android:fontFamily="@font/bold"
        app:layout_constraintTop_toBottomOf="@id/pauseScanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <android.widget.Button
        android:id="@+id/endserver"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="End Server"
        android:textSize="20sp"
        android:background="@drawable/main_item_button"
        android:fontFamily="@font/bold"
        app:layout_constraintTop_toBottomOf="@id/endScanButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <android.widget.Button
        android:id="@+id/goBackButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textSize="20sp"
        android:background="@drawable/main_item_button"
        android:fontFamily="@font/bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:fontFamily="@font/regular"
        app:layout_constraintTop_toBottomOf="@id/scanbook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pageCountEditText"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
